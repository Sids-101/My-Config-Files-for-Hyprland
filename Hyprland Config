
# Define the main modifier key
$mod = SUPER

#Nvidia Environment Variable (Remove if Fails to boot)
env = NVD_BACKEND,direct

# Window rules for Firefox Picture-in-Picture
windowrulev2 = float,class:^(firefox)$,title:^(Picture-in-Picture)$
windowrulev2 = pin,class:^(firefox)$,title:^(Picture-in-Picture)$,floating:1


# MONITOR SETTINGS
monitor=eDP-1,1920x1080@144,0x0,1

# INPUT SETTINGS
input {
    kb_layout = us
    
    numlock_by_default = true 

    touchpad {
        natural_scroll = false
        scroll_factor = 1.0
        tap-to-click = true
        drag_lock = true
    }
    accel_profile = flat
    sensitivity = 0
}


# GENERAL SETTINGS
general {
    gaps_in = 5
    gaps_out = 5
    border_size = 2
    col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
    col.inactive_border = rgba(595959aa)
}

# MISC SETTINGS
misc {
    disable_hyprland_logo = true
    disable_splash_rendering = true
    mouse_move_enables_dpms = true
    key_press_enables_dpms = true
}

# STARTUP APPLICATIONS
exec-once = numlock on
exec-once = hyprpaper
exec-once = hyprctl dispatch workspace 1
exec-once = hyprctl dispatch dpms on eDP-1
exec-once = wlr-randr --output eDP-1 --dpms on
exec-once = waybar &
exec-once = hyprpaper
exec-once = nm-applet &
exec-once = polkit-kde-agent &
exec-once = kitty &
exec-once = MOZ_ENABLE_WAYLAND=1 firefox &


# SWITCH WORKSPACES
bind = SUPER, 1, workspace, 1
bind = SUPER, 2, workspace, 2
bind = SUPER, 3, workspace, 3
bind = SUPER, 4, workspace, 4
bind = SUPER, 5, workspace, 5
bind = SUPER, 6, workspace, 6
bind = SUPER, 7, workspace, 7
bind = SUPER, 8, workspace, 8
bind = SUPER, 9, workspace, 9

# Keybindings
bind = SUPER, space, exec, rofi -show drun -theme ~/.config/rofi/themes/squared-nord.rasi
bind = SUPER_SHIFT, R, exec, hyprctl reload
bind = SUPER, m, exec, for win in $(hyprctl clients | grep -B1 "workspace: $(hyprctl activeworkspace | grep 'workspace ID' | awk '{print $3}')") ; do hyprctl dispatch to>
bind = SUPER_SHIFT, m, killactive
bind = SUPER, d, exec, for win in $(hyprctl clients | grep -B1 "workspace: $(hyprctl activeworkspace | grep 'workspace ID' | awk '{print $3}')") ; do hyprctl dispatch to>
bind = $mod, Return, exec, kitty
bind = $mod, Q, killactive
bind = $mod, T, togglefloating
bind = $mod, F, fullscreen

# Resize floating windows
bind = $mod SHIFT, left, resizeactive, -10 0
bind = $mod SHIFT, right, resizeactive, 10 0
bind = $mod SHIFT, up, resizeactive, 0 -10
bind = $mod SHIFT, down, resizeactive, 0 10

# PREDEFINE WORKSPACES
workspace = 1, monitor:eDP-1, default:true
workspace = 2, monitor:eDP-1, default:true
workspace = 3, monitor:eDP-1, default:true
workspace = 4, monitor:eDP-1, default:true
workspace = 5, monitor:eDP-1, default:true
workspace = 6, monitor:eDP-1, default:true
workspace = 7, monitor:eDP-1, default:true
workspace = 8, monitor:eDP-1, default:true
workspace = 9, monitor:eDP-1, default:true

# MOVE WINDOWS TO WORKSPACES
bind = SUPER_SHIFT, 1, movetoworkspace, 1
bind = SUPER_SHIFT, 2, movetoworkspace, 2
bind = SUPER_SHIFT, 3, movetoworkspace, 3
bind = SUPER_SHIFT, 4, movetoworkspace, 4
bind = SUPER_SHIFT, 5, movetoworkspace, 5
bind = SUPER_SHIFT, 6, movetoworkspace, 6
bind = SUPER_SHIFT, 7, movetoworkspace, 7
bind = SUPER_SHIFT, 8, movetoworkspace, 8
bind = SUPER_SHIFT, 9, movetoworkspace, 9

# SWITCH BETWEEN WINDOWS (MOVE FOCUS)
bind = SUPER, left, movefocus, l
bind = SUPER, right, movefocus, r
bind = SUPER, up, movefocus, u
bind = SUPER, down, movefocus, d

# SWAP WINDOWS (EXCHANGE POSITIONS WITH OTHER WINDOWS)
bind = SUPER_ALT, left, movewindow, l
bind = SUPER_ALT, right, movewindow, r
bind = SUPER_ALT, up, movewindow, u
bind = SUPER_ALT, down, movewindow, d

#Launch wlogout
bind = SUPER, L, exec, wlogout


# MOUSEBINDS FOR DRAGGING AND RESIZING WINDOWS
bindm = SUPER, mouse:272, movewindow
bindm = SUPER, mouse:273, resizewindow


# LID SWITCH HANDLING
bindl=,switch:on:Lid Switch,exec,hyprctl dispatch dpms off
bindl=,switch:off:Lid Switch,exec,hyprctl dispatch dpms on eDP-1

# ANIMATION SETTINGS
animations {
    enabled = true
    bezier = myBezier, 0.05, 0.9, 0.1, 1.05
    animation = windows, 1, 5, myBezier
    animation = windowsIn, 1, 5, myBezier
    animation = windowsOut, 1, 5, myBezier
    animation = windowsMove, 1, 5, myBezier
    animation = border, 1, 10, default
    animation = workspaces, 1, 6, myBezier
}

# DECORATION SETTINGS
decoration {
    rounding = 10
    blur {
        enabled = true
        size = 4
        passes = 1
    }
}
